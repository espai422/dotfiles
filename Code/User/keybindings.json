// Coloque sus atajos de teclado en este archivo para sobreescribir los valores predeterminados
// TODO: switch with multiple tabs, next recomendation with alt j k  

[

//////////////////////// VISUAL MODES ///////////////////////

{ // coment and uncommnet block of lines 
    "key": "alt+c",
    "command":"editor.action.addCommentLine",
    "when": "vim.mode == 'Visual' || vim.mode == 'VisualBlock' || vim.mode == 'VisualLine'",
},
{
    "key":"alt+u",
    "command":"editor.action.removeCommentLine",
    "when": "vim.mode == 'Visual' || vim.mode == 'VisualBlock' || vim.mode == 'VisualLine'",
},
{ // Move block of text up and down
    "key":"alt+k",
    "command":"editor.action.moveLinesUpAction",
    "when": "vim.mode == 'Visual' || vim.mode == 'VisualBlock' || vim.mode == 'VisualLine'",
},
{ 
    "key":"alt+j",
    "command":"editor.action.moveLinesDownAction",
    "when": "vim.mode == 'Visual' || vim.mode == 'VisualBlock' || vim.mode == 'VisualLine'",
},
{ 
    "key":"alt+h",
    "command":"outdent",
    "when": "vim.mode == 'Visual' || vim.mode == 'VisualBlock' || vim.mode == 'VisualLine'",
},
{ 
    "key":"alt+l",
    "command":"tab",
    "when": "vim.mode == 'Visual' || vim.mode == 'VisualBlock' || vim.mode == 'VisualLine'",
},
// {
//     "key": "y",
//     "when": "vim.mode == 'Visual' || vim.mode == 'VisualBlock' || vim.mode == 'VisualLine'",
//     "command": "editor.action.clipboardCopyAction"
// },

/////////////////// Normal Mode && Insert Mode /////////////////////////

{ // Multicursors
    "key":"alt+k",
    "command":"editor.action.insertCursorAbove",
    "when": "vim.mode == 'Normal' || vim.mode == 'Insert'"
},
{ 
    "key":"alt+j",
    "command":"editor.action.insertCursorBelow",
    "when": "vim.mode == 'Normal' || vim.mode == 'Insert'"
},
    // Replace modes
{
    "key": "ctrl+h",
    "command": "editor.action.startFindReplaceAction",
    "when": "vim.mode == 'Normal' || vim.mode == 'Insert'"
},
{   
    "key": "alt+h",
    "command": "editor.action.startFindReplaceAction",
    "when": "vim.mode == 'Normal' || vim.mode == 'Insert'"
},

{
    "key": "alt+shift+h",
    "command": "workbench.action.replaceInFiles",
    "when": "vim.mode == 'Normal' || vim.mode == 'Insert'"
},
    // view file explorer
{
    "key": "alt+e",
    "command": "workbench.view.explorer",
    "when": "vim.mode == 'Normal' || vim.mode == 'Insert'"
},
    // show git control
{
    "key": "alt+g",
    "command": "workbench.view.scm",
    "when": "vim.mode == 'Normal' || vim.mode == 'Insert'"
},
//////////////// Normal Mode //////////////

{
    "key": "u",
    "when": "vim.mode == 'Normal'",
    "command": "undo",
},

{
    "key": "alt+u",
    "when": "vim.mode == 'Normal'",
    "command": "redo"
},
/////////////// Always /////////////

{
    "key": "ctrl+z",
    "command": "undo",
},

{
    "key": "ctrl+shift+z",
    "command": "redo"
},

